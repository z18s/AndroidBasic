<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".CitySwapActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorTable"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/currentCity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="80"
                android:gravity="center"
                android:text="@string/city"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/swapCity"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="10"
                android:contentDescription="@string/city_swap_activity"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_search" />

            <ImageView
                android:id="@+id/appSettings"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="10"
                android:contentDescription="@string/settings_activity"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_setting" />

        </LinearLayout>

        <TextView
            android:id="@+id/dateTodayFull"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/d0"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorTable"
            android:gravity="start"
            android:text="@string/city_swap_text"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <EditText
                android:id="@+id/textCitySelect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="80"
                android:text="@string/select_city_editable" />

            <Button
                android:id="@+id/buttonSwapCity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:text="@string/select_city_button" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical">

            <ListView
                android:id="@+id/citiesList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/cities" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>