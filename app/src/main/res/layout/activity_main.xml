<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorTable"
            android:gravity="center"
            android:text="@string/city"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/dateTodayFull"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/d0"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+25"
                android:textColor="@color/colorPlus"
                android:textSize="60sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/celsius"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:contentDescription="@string/city"
                android:padding="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/d00" />

        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/colorTable">

            <TableRow
                android:background="@color/colorTable"
                android:gravity="center_vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="60dp"
                    android:text="@string/day"
                    android:textStyle="bold" />

                <TextView
                    android:layout_span="2"
                    android:paddingLeft="10dp"
                    android:text="@string/temp_max"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:layout_span="2"
                    android:paddingLeft="10dp"
                    android:text="@string/temp_min"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:layout_span="2"
                    android:text="@string/wind_ms"
                    android:textAlignment="center"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow
                android:gravity="center_vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/dateToday"
                    android:text="@string/d0" />

                <TextView
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    android:text="+29"
                    android:textColor="@color/colorPlus"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@string/city"
                    android:scaleType="centerInside"
                    android:src="@drawable/d00" />

                <TextView
                    android:paddingLeft="30dp"
                    android:paddingRight="10dp"
                    android:text="+23"
                    android:textColor="@color/colorPlus"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@string/city"
                    android:scaleType="centerInside"
                    android:src="@drawable/n00" />

                <TextView
                    android:paddingLeft="20dp"
                    android:text="4" />

                <TextView
                    android:paddingLeft="5dp"
                    android:text="@string/wind_se" />

            </TableRow>

            <TableRow
                android:gravity="center_vertical"
                android:padding="5dp">

                <TextView android:text="@string/d1" />

                <TextView
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    android:text="+24"
                    android:textColor="@color/colorPlus"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@string/city"
                    android:scaleType="centerInside"
                    android:src="@drawable/d20" />

                <TextView
                    android:paddingLeft="30dp"
                    android:paddingRight="10dp"
                    android:text="+19"
                    android:textColor="@color/colorPlus"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@string/city"
                    android:scaleType="centerInside"
                    android:src="@drawable/n21" />

                <TextView
                    android:paddingLeft="20dp"
                    android:text="2" />

                <TextView
                    android:paddingLeft="5dp"
                    android:text="@string/wind_s" />

            </TableRow>

            <TableRow
                android:gravity="center_vertical"
                android:padding="5dp">

                <TextView android:text="@string/d2" />

                <TextView
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    android:text="+26"
                    android:textColor="@color/colorPlus"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@string/city"
                    android:scaleType="centerInside"
                    android:src="@drawable/d10" />

                <TextView
                    android:paddingLeft="30dp"
                    android:paddingRight="10dp"
                    android:text="+20"
                    android:textColor="@color/colorPlus"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@string/city"
                    android:scaleType="centerInside"
                    android:src="@drawable/n10" />

                <TextView
                    android:paddingLeft="20dp"
                    android:text="4" />

                <TextView
                    android:paddingLeft="5dp"
                    android:text="@string/wind_e" />

            </TableRow>

            <TableRow
                android:gravity="center_vertical"
                android:padding="5dp">

                <TextView android:text="@string/d3" />

                <TextView
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    android:text="..."
                    android:textColor="@color/colorPlus"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@string/city"
                    android:scaleType="centerInside"
                    android:src="@drawable/z10" />

                <TextView
                    android:paddingLeft="30dp"
                    android:paddingRight="10dp"
                    android:text="..."
                    android:textColor="@color/colorPlus"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@string/city"
                    android:scaleType="centerInside"
                    android:src="@drawable/z10" />

                <TextView
                    android:paddingLeft="20dp"
                    android:text="3" />

                <TextView
                    android:paddingLeft="5dp"
                    android:text="@string/wind_nw" />

            </TableRow>

            <TableRow
                android:gravity="center_vertical"
                android:padding="5dp">

                <TextView android:text="@string/d4" />

                <TextView
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    android:text="..."
                    android:textColor="@color/colorPlus"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@string/city"
                    android:scaleType="centerInside"
                    android:src="@drawable/z10" />

                <TextView
                    android:paddingLeft="30dp"
                    android:paddingRight="10dp"
                    android:text="..."
                    android:textColor="@color/colorPlus"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@string/city"
                    android:scaleType="centerInside"
                    android:src="@drawable/z10" />

                <TextView
                    android:paddingLeft="20dp"
                    android:text="4" />

                <TextView
                    android:paddingLeft="5dp"
                    android:text="@string/wind_se" />

            </TableRow>

            <TableRow
                android:gravity="center_vertical"
                android:padding="5dp">

                <TextView android:text="@string/d5" />

                <TextView
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    android:text="..."
                    android:textColor="@color/colorPlus"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@string/city"
                    android:scaleType="centerInside"
                    android:src="@drawable/z10" />

                <TextView
                    android:paddingLeft="30dp"
                    android:paddingRight="10dp"
                    android:text="..."
                    android:textColor="@color/colorPlus"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@string/city"
                    android:scaleType="centerInside"
                    android:src="@drawable/z10" />

                <TextView
                    android:paddingLeft="20dp"
                    android:text="4" />

                <TextView
                    android:paddingLeft="5dp"
                    android:text="@string/wind_se" />

            </TableRow>
        </TableLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>